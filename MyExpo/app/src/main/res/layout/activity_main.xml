<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"

android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.studios.patota.myexpo.MainActivity"
android:orientation="vertical"
android:id="@+id/fondoOpc"
android:gravity="bottom"
    >


    <TextView
        android:id="@+id/debuger"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/verde"/>

    <RelativeLayout
    android:layout_width="380dp"
    android:layout_height="150dp"
    android:gravity="left">

    <Button
        android:id="@+id/buttonPlay"
        android:onClick="play"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/stop"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/pause"
        android:layout_toRightOf="@+id/pause"
        android:background="@drawable/play"
        android:padding="100dp" />

    <Button
        android:id="@+id/pause"
        android:onClick="pause"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pause"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/buttonPlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/stop"
        android:onClick="stop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/buttonPlay"
        android:layout_toRightOf="@+id/buttonPlay"
        android:background="@drawable/stop" />


    </RelativeLayout>







</LinearLayout>

